.gallery
{
    text-align: center;

    .gallery-image
    {
        display: inline-block;
        margin: 10px;
        box-shadow: 0 2px 6px 2px rgba(0, 0, 0, 0.75);
        transition: transform 0.5s ease;

        &:hover
        {
            cursor: pointer;
            transform: scale(1.2);
        }

    }

}
