.gallery
{
    text-align: center;

    .gallery-image
    {
        display: inline-block;
        margin: 10px;
        box-shadow: 0 2px 6px 2px rgba(0, 0, 0, 0.75);
        transition: transform 0.5s ease;

        &:hover
        {
            cursor: pointer;
            transform: scale(1.1);
        }
        .gallery-tags
        {
            text-align: left;

            .gallery-tag
            {
                display: inline-block;
                margin: 3px;
                padding: 3px;

                &:hover,
                &:focus
                {
                    background-color: #337ab7;
                    border-color: #2e6da4;
                }
            }
        }
    }

    .load-gif
    {
        display: block;
        margin: 0 auto;
    }

    .tags
    {
        .radio
        {
            text-align: left;
        }

        input
        {
            width: 30px;
            text-align: center;
        }

        button
        {
            margin: 3px;
        }

        @media (max-width: 767px)
        {
            .tags-options
            {
                width: 240px;
                margin: 0 auto;
            }
        }
    }
}
